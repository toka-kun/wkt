  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
<header>
  <div class="banner">

    <!-- ▼ 検索バー（左） -->
    <div class="search-bar">
      <form action="/wkt/s" method="get" id="searchForm" style="display:flex; gap:8px;">
        <input type="text" name="q" id="searchbox" class="form-control" placeholder="検索" required>
        <button type="submit" class="btn btn-search">検索(けんさく)</button>
      </form>
    </div>

    <!-- ▼ リンク（右） -->
    <div class="nav-links">
      <a href="/wkt">ホーム</a>
      <a href="/wkt/cl/history">視聴履歴</a>
      <a href="/wkt/cl/shistory">検索履歴</a>
    </div>

  </div>
</header>

<!-- ▼ 中央タイトル -->
<h1 class="headline">急上昇</h1>

<div class="results" id="trend-container"></div>

<style>
/* ▼ ページ背景 */
body {
  background: #111827;
  color: #ffffff;
}

/* ▼ ヘッダー */
header {
  background: #1F2937;
  padding: 8px 12px;
  border-radius: 0 0 10px 10px;
}

.banner {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* ▼ 検索バー */
#searchbox {
  background: #374151 !important;
  color: #ffffff !important;
  border: none;
}

/* placeholder の色 */
#searchbox::placeholder {
  color: #9CA3AF !important;
}

.btn-search {
  background: #374151;
  color: #ffffff;
  border: none;
}

/* ▼ 右リンク */
.nav-links a {
  color: #D1D5DB;
  margin-left: 18px;
  text-decoration: none;
  font-size: 14px;
}

.nav-links a:hover {
  text-decoration: underline;
}

/* ▼ 中央タイトル */
.headline {
  text-align: center;
  margin-top: 22px;
  margin-bottom: 22px;
  font-size: 26px;
  font-weight: 700;
  color: #ffffff;
}

/* ▼ 動画コンテナ */
#trend-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: center;
}

/* ▼ 動画カード */
.result-item {
  width: 280px;
  padding: 12px;
  background: #1F2937;
  border-radius: 18px;
  transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.result-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 6px 20px rgba(0,0,0,0.25);
}

.thumb {
  width: 100%;
  border-radius: 8px;
}

/* ▼ チャンネル行 */
.channel-row {
  display: flex;
  align-items: center;
  margin-top: 6px;
}

.channel-icon {
  width: 26px;
  height: 26px;
  border-radius: 50%;
  margin-right: 8px;
}

.channel-name,
.video-title,
.video-meta {
  font-size: 12px;
  color: #ffffff;
  text-decoration: none;
}

.video-title {
  font-weight: 600;
  margin-top: 4px;
}

.video-meta {
  margin-top: 4px;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
    // ▼ EJS からサーバーで取得した JSON をそのまま埋め込む
    const trending = <%- JSON.stringify(topVideos.trending) %>;

    const container = document.getElementById("trend-container");
    container.innerHTML = "";

    trending.forEach(item => {
        const html = `
            <div class="result-item">
                <a href="/wkt/w/${item.id}">
                    <img loading="lazy" class="thumb" src="/wkt/back/vi/${item.id}/sddefault.jpg">
                </a>

                <div class="channel-row">
                    <img class="channel-icon" src="${item.channelIcon}">
                    <a href="/wkt/c/${item.channelId}" class="channel-name">${item.channel}</a>
                </div>

                <p class="video-title">${item.title}</p>

                <p class="video-meta">
                    ${Number(item.viewCount).toLocaleString()} 回再生 ・
                    ${Number(item.likeCount).toLocaleString()} 高評価 ・
                    ${Number(item.commentCount).toLocaleString()} コメント
                </p>
            </div>
        `;
        container.innerHTML += html;
    });
});
</script>

<script>
$(function () {
    $('#searchbox').autocomplete({
        source: function (request, response) {
            $.ajax({
                url: '/wkt/back/suggest',
                data: { keyword: request.term },
                success: function (data) {
                    response(data);
                }
            });
        },
        delay: 1,
        select: function (event, ui) {
            $('#searchbox').val(ui.item.value);
            $('form').submit();
        }
    });
});
</script>

</body>
</html>
