async function loadTrends() {
    const url = "https://raw.githubusercontent.com/siawaseok3/wakame/refs/heads/master/trend.json";

    try {
        const res = await fetch(url);
        const json = await res.json();
        const trending = json.trending;

        const container = document.getElementById("trend-container");
        container.innerHTML = "";

        trending.forEach(item => {
            const videoId = item.id;
            const title = item.title;
            const channel = item.channel;
            const channelId = item.channelId;
            const thumbnail = item.thumbnails.medium.url;

            const html = `
                <div class="result-item">
                    <a href="/wkt/w/${videoId}">
                        <img loading="lazy" src="${thumbnail}" alt="${title}">
                    </a>
                    <p class="channel-name"><a href="/wkt/c/${channelId}">${channel}</a></p>
                    <p class="video-title">${title}</p>
                </div>
            `;
            container.innerHTML += html;
        });

    } catch (err) {
        console.error("Trend èª­ã¿è¾¼ã¿å¤±æ•—:", err);
    }
}

loadTrends();
</script>


